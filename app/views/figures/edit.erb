<h2>Edit <%=@figure.name%></h2>

<form action="/figures/<%= @figure.id %>" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">
Figure Name: <input type="text" name="figure[name]" id="figure_name">
<br>
<label><p><strong>Update Title</strong></p></label>
<% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= title.name %>" <%='checked' if @figure.titles.include?(title) %>
    </br>
  <% end %>
<p>New Title: <input type="text" name="figure[title]" id="new_title_name"></input></p>

<label><p><strong>Landmark: <%Landmark.all.each do |landmark|%></strong></p></label>
  <input type="checkbox" name="figure[landmark]" id="<%= landmark.name %>" value="<%=landmark.id%>"><%=landmark.name%></input>
  <br>
<%end%>
<p>New Landmark: <input type="text" name="figure[landmark]" id="new_landmark"></input></p>
  <br>
<input type="submit" value="Edit Figure">
</form>
